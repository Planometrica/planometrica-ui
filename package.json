{
  "name": "@planometrica/ui",
  "version": "1.0.0",
  "description": "Shared UI components and design tokens for Planometrica platform",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./tailwind": {
